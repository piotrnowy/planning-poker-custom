{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "site": "planning-poker-custom",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true
  }
}
